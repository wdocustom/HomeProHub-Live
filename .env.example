# ========================================
# HomeProHub Environment Variables Template
# ========================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit .env to version control
#
# ========================================

# Google OAuth Credentials (for future implementation)
GOOGLE_CLIENT_ID="your-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"

# Session Security
SESSION_SECRET="generate-a-random-secret-key-here"

# AI Provider API Keys (At least one required for AI features)
# Anthropic Claude (Recommended - currently used by default)
ANTHROPIC_API_KEY="sk-ant-api03-your-key-here"

# OpenAI (Optional - for triage system router/answer)
OPENAI_API_KEY="sk-your-openai-key-here"

# AI Model Configuration (Optional - defaults shown)
ANTHROPIC_ROUTER_MODEL="claude-3-haiku-20240307"
ANTHROPIC_ANSWER_MODEL="claude-3-5-sonnet-20241022"
OPENAI_ROUTER_MODEL="gpt-4o-mini"
OPENAI_ANSWER_MODEL="gpt-4o"

# Supabase Configuration (REQUIRED for authentication and database)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key-here"

# Brevo Email Configuration (for notifications)
BREVO_API_KEY="your-brevo-api-key-here"
BREVO_FROM_EMAIL="notifications@homeprohub.today"
BREVO_FROM_NAME="HomeProHub"

# Twilio SMS Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token-here"
TWILIO_PHONE_NUMBER="+1234567890"

# Stripe Payment Processing
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key-here"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key-here"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret-here"
STRIPE_PRODUCT_ID="prod_homeprohub_subscriptions"

# Notification Worker Configuration
NOTIFICATION_POLL_INTERVAL="30000"

# Server Configuration
PORT="3000"
NODE_ENV="development"
